<h1>新規タスク作成ページ</h1>

<%= render 'form', task: @task %>

<%= form_with(model: @task, local: true) do |f| %>

  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  <%= f.label :content, 'タスク内容' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>